    <section id="materias">
        <div class="container-fluid">
            <div class="row">

                <div class="col-7 left-div">
                    <h3 style="float:right">Matérias</h3>
                    <div style="clear: both;"></div>

                    <div class="input-group mt-5 mb-4">
                        <input style="color: black;" class="search" type="text" name="pesquisa" placeholder="Procurar">
                        <div class="input-group-prepend">
                            <button class="bordaBotaoPesquisa" type="button"
                                style="background: #21E6C1; color: #116e71"><i class="fas fa-search"
                                    style="margin-right: 10px;"></i></button>
                        </div>
                    </div>

                    <div class="encimaTabela">
                        <table>
                            <thead>
                                <tr>
                                    <th class="borderLeft">Nome</th>
                                    <th>Professor</th>
                                    <th class="borderRight">Estado</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                    <div class="scrollTabela">
                        <table id="subjects-table">
                            <tbody></tbody>
                        </table>
                    </div>
                    <div class="abaixoTabela">&nbsp;</div>
                    <br>
                    <br>
                    <div id="show-subject-info"></div>
                </div>

                <div class="col-5 right-div">
                    <div id="adicionarMateria" class="marginFormularios">
                        <input type="text" name="name" placeholder="Nome" required="required" id="subject-name">
                        <br>
                        <select name="teacherId" id="teacher-select">
                            <option value="" disabled="disabled" selected="selected">Professor</option>
                        </select>
                        <br>
                        <button onclick="addSubject()">Adicionar matéria</button>
                    </div>
                </div>

            </div>
        </div>
    </section>

